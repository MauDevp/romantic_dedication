{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "preserve",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "src",
        ".next/types/**/*.ts"
, "setupTests.ts"    ],
    "exclude": [
        "node_modules"
    ]
}